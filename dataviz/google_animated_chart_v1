<html>
  <head>
    <style>

    </style>
    <!--Load the AJAX API-->
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">

    // Load the Visualization API and the corechart package.
    google.charts.load('current', {'packages':['corechart']});

    // Set a callback to run when the Google Visualization API is loaded.
    google.charts.setOnLoadCallback(drawSheetName);

    // Callback that pulls data from Google Sheet,
    // instantiates the chart, passes in the data and
    // draws it.

    function drawSheetName() {
      var queryString = encodeURIComponent('SELECT * LIMIT 366');

      var query = new google.visualization.Query(
          'https://docs.google.com/spreadsheets/d/<-- SPREADSHEET ID GOES HERE -->/gviz/tq?sheet=yearsFull&headers=1&tq=' + queryString);
      query.send(handleSampleDataQueryResponse);
    }

    function handleSampleDataQueryResponse(response) {
      if (response.isError()) {
        alert('Error in query: ' + response.getMessage() + ' ' + response.getDetailedMessage());
        return;
      }

      var options = {
        height: 600,
        curveType: 'function',
        vAxis: { 
          minValue: 0, 
          maxValue: 100
        },
        legend: 'bottom',
        series: {
          0: { color: '#bdbdbd' }, 
          1: { color: '#8c1919' }
        }
      };
      
      var data = response.getDataTable();
      var chart = new google.visualization.LineChart(document.getElementById('chart_div'));
      var view = new google.visualization.DataView(data);

      // set columns initially
      view.setColumns([0,1]);

      // draw the chart initially
      chart.draw(view, options);
      
      // draw each new series
      var i = 0, howManyTimes = data.getNumberOfColumns() - 2;

      function updateChart() {
          var arr = [0,1,i+2];
          view.setColumns(arr);
          drawChart();
          i++;
          if( i < howManyTimes ){
              setTimeout( updateChart, 500 );
          }
      }
      updateChart();
      
      function drawChart() {
        chart.draw(view, options);
      }

    }
    </script>
    
  </head>

  <body>
    <!--Div that will hold the chart-->
    <div id="chart_div"></div>
</html>

